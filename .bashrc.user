#!/bin/bash

alias n="nvim"

alias docs="cd ~/Documents"
alias pics="cd ~/Pictures"
alias down="cd ~/Downloads"
alias od="cd ~/OneDrive"

# Go to Git repo
gr() {
  git_repos="/home/${USER}/Documents/Git_Repos";

  if [ -d ${git_repos}/$1 ]; then
    cd "${git_repos}/$1";
  else
    if [ -d ${git_repos} ]; then
      echo "$1 is not cloned in ${git_repos}";
    else
      echo "Git repo directory ${git_repos} does not exist on this machine";
    fi
  fi
}

alias tm="tmux"
alias tmns="tmux new -s"
alias tmls="tmux ls"
alias tma="tmux a"
alias tmat="tmux a -t"
alias tmks="tmux kill-session -t"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"

alias fexp="nautilus --browser $# &"

decorate_cur_conda_env() {
  BLK='\033[01;30m'
  RED='\033[01;31m'
  GRN='\033[01;32m'
  YLW='\033[01;33m'
  BLU='\033[01;34m'
  PUR='\033[01;35m'
  CYN='\033[01;36m'
  GRY='\033[00;37m'
  WHT='\033[01;37m'
  RST='\033[00m'

  if [[ -n ${CONDA_DEFAULT_ENV} ]]; then
    echo -e "${WHT}(${GRN}${CONDA_DEFAULT_ENV}${WHT}) "
  fi
}

set_bash_prompt() {
  BLK='\[\033[01;30m\]'
  RED='\[\033[01;31m\]'
  GRN='\[\033[01;32m\]'
  YLW='\[\033[01;33m\]'
  BLU='\[\033[01;34m\]'
  PUR='\[\033[01;35m\]'
  CYN='\[\033[01;36m\]'
  WHT='\[\033[01;37m\]'
  RST='\[\033[00m\]'

  # PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
  # If ${debian_chroot} is defined (not null), then use it.  Else, use "".

  PS1="${debian_chroot:+($debian_chroot)}${YLW}\u${WHT}@${BLU}\h${WHT}: ${CYN}\w/ \$(__git_ps1 \"${WHT}[${YLW}\Ue725 ${GRN}%s${WHT}] \")\$(decorate_cur_conda_env)${RED}\$${RST} "
}

PROMPT_COMMAND=set_bash_prompt

pushd() {
  if [ $# -eq 0 ]; then
    DIR="${HOME}"
  else
    DIR="$1"
  fi

  builtin pushd "${DIR}" > /dev/null
}

popd() {
  builtin popd > /dev/null
}

alias cd='pushd'
alias -- -='popd'

alias ls='exa -lFb --icons --color always'
alias la='ls -a'
alias tree='ls --tree'

alias bat='batcat'

alias gs='git st'

alias t='trash'
