alias fexp="nautilus --browser $# &"

set_bash_prompt() {
  BLK='\[\033[01;30m\]'
  RED='\[\033[01;31m\]'
  GRN='\[\033[01;32m\]'
  YLW='\[\033[01;33m\]'
  BLU='\[\033[01;34m\]'
  PUR='\[\033[01;35m\]'
  CYN='\[\033[01;36m\]'
  WHT='\[\033[01;37m\]'
  RST='\[\033[00m\]'

  # PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
  # If ${debian_chroot} is defined (not null), then use it.  Else, use "".

  PS1="${debian_chroot:+($debian_chroot)}${YLW}\u${WHT}@${BLU}\h${WHT}: ${CYN}\w/ \$(__git_ps1 \"${WHT}[${YLW}\Ue725 ${GRN}%s${WHT}] \")${RED}\$${RST} "
}

PROMPT_COMMAND=set_bash_prompt

pushd() {
  if [ $# -eq 0 ]; then
    DIR="${HOME}"
  else
    DIR="$1"
  fi

  builtin pushd "${DIR}" > /dev/null
}

popd() {
  builtin popd > /dev/null
}

alias cd='pushd'
alias -- -='popd'

alias ls='exa -lFb --icons --color always'
alias la='ls -a'
alias tree='ls --tree'

alias bat='batcat'

alias gs='git st'
